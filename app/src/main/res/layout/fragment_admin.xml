<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".view.fragments.AdminFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieWait"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:lottie_rawRes="@raw/dots"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/movieImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/select_image"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/film_resmi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/movieName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/add_movie_text_background"
        android:hint="@string/film_adi"
        android:textColorHint="@color/white"
        android:maxLines="1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:padding="5dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/movieImage"
        app:layout_constraintEnd_toEndOf="@id/movieImage"
        app:layout_constraintTop_toBottomOf="@id/movieImage" />

    <LinearLayout
        android:id="@+id/movieYearRateLinear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/movieName"
        app:layout_constraintEnd_toEndOf="@id/movieName"
        app:layout_constraintTop_toBottomOf="@id/movieName">

        <EditText
            android:id="@+id/movieYear"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:hint="@string/yil"
            android:textSize="16sp"
            android:inputType="number"
            android:layout_marginEnd="50dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:background="@drawable/add_movie_text_background" />

        <EditText
            android:id="@+id/movieRate"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="5dp"
            android:inputType="numberDecimal"
            android:textColorHint="@color/white"
            android:hint="@string/puan"
            android:textColor="@color/white"
            android:background="@drawable/add_movie_text_background" />

    </LinearLayout>

    <EditText
        android:id="@+id/movieComment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="14sp"
        android:hint="@string/comment"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@drawable/add_movie_text_background"
        app:layout_constraintStart_toStartOf="@id/movieYearRateLinear"
        app:layout_constraintEnd_toEndOf="@id/movieYearRateLinear"
        app:layout_constraintTop_toBottomOf="@id/movieYearRateLinear"
        app:layout_constraintBottom_toTopOf="@id/addButton"/>

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ekle"
        android:backgroundTint="#DD2C00"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>